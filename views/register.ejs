    <h1 class="h1-register">Register</h1>
    <div role="alert" id="loginAlertRegisterPage" style="display: none" >
        <p id="ploginAlertRegisterPage">Incorrect Credential</p>
    </div>
    <form  class="form" id="formLogin" action="/register" method="POST">
      <div class="row">
        <div class="col-25">
          <label for="nickname">Nickname</label>
        </div>
        <div class="col-75">
          <input type="text" name="nickname" placeholder="Your nickname.." required>
        </div>
      </div>
      <div class="row">
        <div class="col-25">
          <label for="email">E-Mail</label>
        </div>
        <div class="col-75">
          <input type="email" name="email" placeholder="Your email.." required>
        </div>
      </div>
      <div class="row">
        <div class="col-25">
          <label for="password1">Password</label>
        </div>
        <div class="col-75">
          <input name="password1" type="password" placeholder="Your password.." required>
        </div>
      </div>
      <div class="row">
        <div class="col-25">
          <label for="password2">Password</label>
        </div>
        <div class="col-75">
          <input name="password2" type="password" placeholder="Your password again.." required></br>
        </div>
      </div>
      <br>
      <div class="row">
        <input type="submit" value="Submit">
      </div>
      </form>
    </div>
